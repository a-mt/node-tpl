extends ../layout.pug

block content
    div(class="container")
        if error
            p(class="alert error") #{error}

        br
        if env.AUTH_NONE
            p(class="alert error") You can't login

        if env.AUTH_GITHUB
            a(href="/auth/github")
                div(class="btn btn-social github")
                    img(src="http://i.imgur.com/PlB7qTM.png" alt="github logo" class="pull-left")
                    p LOGIN WITH GITHUB

        if env.AUTH_TWITTER
            a(href="/auth/twitter")
                div(class="btn btn-social twitter")
                    img(src="http://i.imgur.com/DOlhhUU.png" alt="github logo" class="pull-left")
                    p LOGIN WITH TWITTER

        if env.AUTH_LOCAL
            div(class="thumbnail login")
                div(class="btn-social") LOGIN WITH YOUR ACCOUNT

                form(method="post")
                    div(class="form-group")
                        label(for="username") Username
                        input(type="text" name="username" id="username" class="form-control" required)
                    
                    div(class="form-group")
                        label(for="password") Password
                        input(type="password" name="password" id="password" class="form-control" required)
                    
                    input(type="submit" class="btn btn-default" value="Login")
        
                br
                p Need an account?&nbsp;
                    a(href="/signup") Signup