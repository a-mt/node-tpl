extends ../layout.pug

block content
    div(class="container")

        if env.AUTH_LOCAL
            form(method="post")
                div(class="form-group")
                    label(for="username") Username
                    input(type="text" name="username" id="username" class="form-control" required value=(data.username ? data.username : ''))
                    if errors.username
                        p(class="error") #{errors.username.message}
    
                div(class="form-group")
                    label(for="password") Password
                    input(type="password" name="password" id="password" class="form-control" required value=(data.password ? data.password : ''))
                    if errors.password
                        p(class="error") #{errors.password.message}
    
                input(type="submit" class="btn btn-default" value="Signup")
        else
            p(class="alert error") You can't create an account

        br
        p Already have an account?&nbsp;
            a(href="/login") Login